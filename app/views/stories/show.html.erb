<%- model_class = Story -%>

<div class="page-header handWritten">
  <h1><%= @story.title %></h1>
</div>


 <% @sortSnippets.each do |s| %>
  <pre class="handWritten"><%= s.content %></pre>
 <% end %>


<div id="tagStoryShow">
<div id="tagStoryShowList">
 <% @story.tags.each do |tag| %>
  <%= link_to tag.name, tagged_url(:tag => tag.name) %>
 <% end %>
</div> 
</div>



