<%= form_for [@story, @story.snippets.build], :html => {:class => 'form-horizontal'} do |f| %>
    
	<div class="control-group">
        <%= f.text_area :content, :class => 'text_area, input-block-level', :placeholder => 'What happens next?' %>
    </div>
	
	
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>	
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>
	
	
	

<% end %>
