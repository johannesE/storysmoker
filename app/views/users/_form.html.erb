<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="controls">
      <%= f.text_field :username, :class => 'text_field', :placeholder => "Username" %>
  </div>
  <div class="controls">
      <%= f.text_field :email, :class => 'text_field', :placeholder => "Email" %>
  </div>
    <div class="controls">
      <%= f.text_field :password, :class => 'text_field', :placeholder => "Password" %>
  </div>
  <div class="controls">
      <%= f.text_field :password_confirmation, :class => 'text_field', :placeholder => "Password confirmation" %>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
